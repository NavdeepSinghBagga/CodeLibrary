    while(t--){
        ll z;
        cin>>z;
        string s;
        cin>>s;
        string ans="NO";
        for(i=0;i<z-1;i++){
            if((s[i]=='L'&&s[i+1]=='L')||(s[i]=='R'&&s[i+1]=='R')){
                ans="YES";
                break;
            }
        }
        // if(l-f+1==cz)cout<<1<<endl;
